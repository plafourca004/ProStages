{% extends 'base.html.twig' %}

{% block body %}
<br/><h3>Liste des stages par formation</h3>
{% endblock %}

{% block stages %}
<div class="row">
    {% for stage in stages %}
        {% set var = 0 %}
        {% for form in stage.formations %}
            {% if form.id == id %}
                {% set var = 1 %}
            {% endif %}
        {% endfor %}
        {% if var == 1 %}
        <div class="col-md-4 py-3">
                <div class="card">
                    <h5 class="card-header">
                        {{ stage.titre }}
                    </h5>
                    <div class="card-body">
                        <p class="card-text">
                            Stage proposé par <span class="font-weight-bold"><a href="{{path('entreprise',{id:stage.identreprise.id})}}" class="text-decoration-none">{{ stage.identreprise.nom }}</a></span><br />
                            Formation(s) demandée(s) : 
                            <span class="font-weight-bold">
                                {% for form in stage.formations %}
                                    <a href="{{path('formation',{id:form.id})}}" class="text-decoration-none">{{form.acronyme}}</a>,
                                {% endfor %}
                            </span>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="{{path('stages',{id:stage.id})}}"><button type="button" class="btn btn-primary">Voir Plus</button></a>
                    </div>
                </div>
            </div>
            {% endif %}
    {% endfor %}
</div>
{% endblock %}